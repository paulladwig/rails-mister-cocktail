<h1>Add a Dose to <%=@cocktail.name%></h1>

<form  action="/cocktails/<%=@cocktail.id%>/doses" method="post">
  <div class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" class="form-control mt-2" name="description" value='<%="#{@dose.description}"%>'>
    <input list="ingredients" class="form-control mt-2 select2" name="ingredient" >
    <datalist id="ingredients">
      <% @ingredients.each do |ingredient| %>
          <option value='<%="#{ingredient.name}"%>'>
      <% end %>
    </datalist>
    <input class="btn btn-primary mt-2" type="submit">
  </div>
</form>
