<h1><%=@cocktail.name%></h1>

<h5>Description</h5>
<div>
  <% @cocktail.doses.each do |dose| %>
  <div>
    <%=dose.description%>
    <%= link_to dose_path(dose), method: :delete do %>
      <button class="button-small"><i class="fas fa-trash"></i></button>
    <% end %>
  </div>
  <%end%>
</div>


<h5>Ingredients</h5>
<div>
  <% @cocktail.ingredients.each do |ingredient| %>
    <div><%=ingredient.name%></div>
  <% end %>
</div>


<%= link_to new_dose_path(@cocktail) do %>
  <button class="button">ADD INGREDIENT</button>
<% end %>

<%= link_to cocktails_path do %>
  <button class="button">BACK</button>
<% end %>
